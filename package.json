{
  "name": "studypulse",
  "version": "1.0.0",
  "description": "StudyPulse - Nursing Education Platform",
  "private": true,
  "scripts": {
    "start": "concurrently \"pnpm run start:backend\" \"pnpm run start:frontend\"",
    "start:frontend": "pnpm --filter frontend start",
    "start:backend": "pnpm --filter backend run dev",
    "build": "concurrently \"pnpm run build:backend\" \"pnpm run build:frontend\"",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "install:all": "pnpm install",
    "dev": "concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\"",
    "dev:frontend": "pnpm --filter frontend start",
    "dev:backend": "pnpm --filter backend run dev"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.3",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.0.0",
    "pdf-parse": "^1.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.11",
    "@types/pdf-parse": "^1.1.4",
    "concurrently": "^8.2.2",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  }
}
